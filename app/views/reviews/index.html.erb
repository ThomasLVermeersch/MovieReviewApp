<p id="notice"><%= notice %></p>

<h1>All Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Movie_title</th>
      <th>Rating</th>
      <th>Comment</th>
      <th>Movie</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td><%= review.email %></td>
        <td><%= review.movie_title %></td>
        <td><%= review.rating %></td>
        <td><%= review.comment %></td>
        <td><%= review.movie_id %></td>
        <td><%= review.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
<a href="/">Home</a>
